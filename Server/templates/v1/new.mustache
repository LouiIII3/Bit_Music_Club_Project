    <!-- 추가된 CSS 코드 -->
    <style>
        /* main.css */
        main {
            width: 100%;
            height: 100vh;
            color: white;
            background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('musicimage.jpg') center center;
            background-size: cover;
